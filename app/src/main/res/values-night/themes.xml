<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoggyWeather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/soft_white</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FoggyWeather.SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark_mode</item>
        <item name="colorPrimaryVariant">@color/primary_dark_mode</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/secondary_dark_mode</item>
    </style>

    <!-- Custom style for background layouts -->
    <style name="CustomDarkLightModeBackgroundLayout" parent="Theme.AppCompat.NoActionBar">
        <item name="cardBackgroundColor">@color/dark_blue</item>
    </style>

    <!-- Custom style for CardView backgrounds -->
    <style name="CustomDarkLightModeBackground" parent="Theme.AppCompat.NoActionBar">
        <item name="cardBackgroundColor">@color/primary_dark_mode</item>
    </style>

    <!-- Custom style for secondary CardView backgrounds -->
    <style name="CustomDarkLightModeSecondaryBackground" parent="Theme.AppCompat.NoActionBar">
        <item name="cardBackgroundColor">@color/secondary_dark_mode</item>
    </style>

    <!-- Custom style for SplashScreen background -->
    <style name="CustomSplashScreenBackgroundLayout" parent="Theme.AppCompat.NoActionBar">
        <item name="cardBackgroundColor">@color/secondary_dark_mode</item>
    </style>

    <!-- Custom style for SearchView -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">15sp</item>
        <item name="android:editTextColor">@color/light_mode_text_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Custom style for BottomNavigation -->
    <style name="BottomNavigation" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/dark_blue</item>
        <item name="itemIconTint">@color/soft_white</item>
        <item name="itemTextColor">@color/light_mode_text_color</item>
    </style>

</resources>