<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.current.CurrentWeatherFragment">

    <RelativeLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:neomorph_corner_radius="16dp"
            app:neomorph_elevation="4dp"
            app:neomorph_background_color="?android:textColorSecondary"
            app:neomorph_highlight_color="?android:textColorSecondary"
            app:neomorph_shadow_color="?android:textColorHint"
            app:neomorph_shadow_type="outer"
            app:neomorph_view_type="circular"
            android:layout_centerInParent="true">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:indeterminateTint="@color/green"/>

        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/neomorphFrameLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:neomorph_background_color="?android:textColorSecondary"
                app:neomorph_highlight_color="?android:textColorSecondary"
                app:neomorph_shadow_color="?android:textColorHint"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="8dp"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="18sp"
                        tools:text="Location"
                        app:drawableStartCompat="@drawable/ic_location"
                        android:drawableTint="@color/red"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="20dp"
                        tools:text="22°C"
                        android:textSize="60sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_location" />

                    <ImageView
                        android:id="@+id/img_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:layout_constraintBottom_toTopOf="@+id/linearlayout1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txt_temperature"
                        app:layout_constraintTop_toBottomOf="@+id/txt_location"
                        tools:src="@drawable/ic_cloud"
                        tools:tint="@color/black"/>

                    <LinearLayout
                        android:id="@+id/linearlayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_temperature">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Condition:"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txt_condition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textSize="18sp"
                            tools:text="Partly Cloud" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feels like:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/linearlayout1"
                        app:layout_constraintTop_toBottomOf="@+id/linearlayout1" />

                    <TextView
                        android:id="@+id/txt_feels_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textSize="18sp"
                        tools:text="30"
                        app:layout_constraintBottom_toTopOf="@+id/neomorphFrameLayout"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toTopOf="@+id/textView3"/>

                    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                        android:id="@+id/neomorphFrameLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/textView3"
                        app:neomorph_background_color="@color/green"
                        app:neomorph_highlight_color="?android:textColorSecondary"
                        app:neomorph_shadow_color="@color/green"
                        app:neomorph_corner_radius="8dp"
                        app:neomorph_elevation="8dp"
                        app:neomorph_shadow_type="outer"
                        app:neomorph_view_type="rectangular">

                        <TextView
                            android:id="@+id/txt_max_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_max"
                            android:padding="8dp"
                            tools:text="24.9°C"
                            android:textSize="22sp"
                            android:textStyle="bold"/>

                    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                        android:id="@+id/neomorphFrameLayout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/neomorphFrameLayout"
                        app:layout_constraintTop_toTopOf="@+id/neomorphFrameLayout"
                        app:neomorph_background_color="@color/green"
                        app:neomorph_highlight_color="?android:textColorSecondary"
                        app:neomorph_shadow_color="@color/green"
                        app:neomorph_corner_radius="8dp"
                        app:neomorph_elevation="8dp"
                        app:neomorph_shadow_type="outer"
                        app:neomorph_view_type="rectangular">

                        <TextView
                            android:id="@+id/txt_min_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_min"
                            android:padding="8dp"
                            tools:text="18.3°C"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="weatherapi.com"
                        app:drawableStartCompat="@drawable/ic_sun"
                        android:drawableTint="@color/red"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/neomorphFrameLayout">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Last updated:"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_last_update"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            tools:text="15:00" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Forecast:"
                android:textSize="22sp"
                android:layout_marginStart="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_forecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:listitem="@layout/forecast_item_view"/>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="8dp"
                app:neomorph_background_color="?android:textColorSecondary"
                app:neomorph_highlight_color="?android:textColorSecondary"
                app:neomorph_shadow_color="?android:textColorHint"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunrise and Sunset:"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="10dp"
                            android:gravity="center">

                            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:neomorph_corner_radius="16dp"
                                app:neomorph_elevation="4dp"
                                app:neomorph_background_color="?android:textColorHint"
                                app:neomorph_highlight_color="?android:textColorSecondary"
                                app:neomorph_shadow_color="?android:textColorHint"
                                app:neomorph_shadow_type="outer"
                                app:neomorph_view_type="circular">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/sunrise"
                                    android:layout_margin="6dp"/>

                            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sunrise"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/txt_sunrise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="05:26 AM"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp"
                            android:gravity="center">

                            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:neomorph_corner_radius="16dp"
                                app:neomorph_elevation="4dp"
                                app:neomorph_background_color="?android:textColorHint"
                                app:neomorph_highlight_color="?android:textColorSecondary"
                                app:neomorph_shadow_color="?android:textColorHint"
                                app:neomorph_shadow_type="outer"
                                app:neomorph_view_type="circular">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/sunset"
                                    android:layout_margin="6dp"/>

                            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sunset"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/txt_sunset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="05:25 PM"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="8dp"
                app:neomorph_background_color="?android:textColorSecondary"
                app:neomorph_highlight_color="?android:textColorSecondary"
                app:neomorph_shadow_color="?android:textColorHint"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moonrise and Moonset:"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="10dp"
                            android:gravity="center">

                            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:neomorph_corner_radius="16dp"
                                app:neomorph_elevation="4dp"
                                app:neomorph_background_color="?android:textColorHint"
                                app:neomorph_highlight_color="?android:textColorSecondary"
                                app:neomorph_shadow_color="?android:textColorHint"
                                app:neomorph_shadow_type="outer"
                                app:neomorph_view_type="circular">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/moonrise"
                                    android:layout_margin="6dp"/>

                            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Moonrise"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/txt_moonrise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="05:26 AM"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp"
                            android:gravity="center">

                            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:neomorph_corner_radius="16dp"
                                app:neomorph_elevation="4dp"
                                app:neomorph_background_color="?android:textColorHint"
                                app:neomorph_highlight_color="?android:textColorSecondary"
                                app:neomorph_shadow_color="?android:textColorHint"
                                app:neomorph_shadow_type="outer"
                                app:neomorph_view_type="circular">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/moonset"
                                    android:layout_margin="6dp"/>

                            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Moonset"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/txt_moonset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="05:25 PM"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:neomorph_corner_radius="16dp"
                            app:neomorph_elevation="4dp"
                            app:neomorph_background_color="?android:textColorHint"
                            app:neomorph_highlight_color="?android:textColorSecondary"
                            app:neomorph_shadow_color="?android:textColorHint"
                            app:neomorph_shadow_type="outer"
                            app:neomorph_view_type="circular">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/moon_phase"
                                android:layout_margin="6dp"/>

                        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Moon Phase:"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="5dp"/>

                            <TextView
                                android:id="@+id/txt_moon_phase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="New Moon"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Illumination:"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="5dp"/>

                            <TextView
                                android:id="@+id/txt_moon_illumination"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="0"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/neomorphFrameLayout6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3-Days Forecast:"
                    android:textSize="22sp"
                    android:layout_marginStart="10dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_forecast_3_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/forecast_3_days_item_view"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>